<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="palmer.matthew.filehandler.controller.RegisterController" stylesheets="@../css/register.css">
   <GridPane fx:id="gridPane" hgap="10" vgap="10" alignment="CENTER">
      <padding>
         <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>
      <Label text="Register A New User" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" styleClass="header-label"/>
      <TextField fx:id="userNameField" promptText="Full Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="field-label"/>
      <TextField fx:id="emailField" promptText="Email Address" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
      <Label text="Email Address:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="field-label"/>
      <TextField fx:id="userIdField" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
      <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="field-label"/>
      <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
      <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="field-label"/>
      <PasswordField fx:id="retypedPasswordField" promptText="Re-enter Password" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
      <Label text="Re-enter Password:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="field-label"/>
      <Button text="Register" onAction="#registerUser" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="register-btn"/>
   </GridPane>
</AnchorPane>
